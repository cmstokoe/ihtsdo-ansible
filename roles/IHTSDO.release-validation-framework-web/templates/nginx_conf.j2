#{{ ansible_managed }}

server {
  server_name {{ release_validation_framework_web_nginx_servername }};
  listen 80{% if release_validation_framework_web_nginx_default_site == true %} default{% endif %};
  rewrite ^ https://$host$request_uri permanent;
}

server {
  server_name {{ release_validation_framework_web_nginx_servername }};

  listen 443 ssl {% if release_validation_framework_web_nginx_default_site == true %}default{% endif %};

  ssl_certificate     {{ release_validation_framework_web_nginx_ssl_cert_file_dest }};
  ssl_certificate_key {{ release_validation_framework_web_nginx_ssl_key_file_dest }};
  ssl_dhparam /etc/nginx/dhparam.pem;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_prefer_server_ciphers on;
  ssl_ciphers 'EECDH+ECDSA+AESGCM EECDH+aRSA+AESGCM EECDH+ECDSA+SHA384 EECDH+ECDSA+SHA256 EECDH+aRSA+SHA384 EECDH+aRSA+SHA256 EECDH EDH+aRSA !RC4 !aNULL !eNULL !LOW !3DES !MD5 !EXP !PSK !SRP !DSS';
  ssl_session_cache shared:SSL:50m;
  ssl_session_timeout 5m;

  add_header Strict-Transport-Security max-age=15768000;

  location / {
    root /srv/http/rvf-web;
  }

  location /api {
      proxy_pass {{ release_validation_framework_web_api_url }};
      proxy_http_version 1.1;
      proxy_set_header Connection "";
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto "https";
      proxy_set_header X-Url-Scheme $scheme;
      proxy_connect_timeout 150;
      proxy_send_timeout 3600;
      proxy_read_timeout 3600;
      proxy_buffers 4 32k;
      client_max_body_size 2g;
      client_body_buffer_size 128k;
      proxy_busy_buffers_size    64k;
      proxy_temp_file_write_size 64k;
      proxy_redirect http:// https://;
  }

}
