[program:{{refset_app_name}}]
user = {{refset_user}}
directory = /opt/%(program_name)s/run
command = /usr/bin/java -Xms256m -Xmx{{refset_xmx}} -XX:+UseConcMarkSweepGC -jar /opt/%(program_name)s/lib/app.jar -Drefset.config=/opt/%(program_name)s/conf/config.properties -resetExtract -extractDirectory /opt/%(program_name)s/run/extract
#startsecs=5
#stopsignal=INT
autostart = true
autorestart = true
stdout_logfile=/var/log/tomcat.log
stdout_logfile_backups=5
stderr_logfile_backups=5
stdout_logfile_maxbytes=10485760
stderr_logfile_maxbytes=10485760

