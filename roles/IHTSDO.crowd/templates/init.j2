#!/bin/bash

# Atlassian Linux service controller script
RUN_AS_USER={{ crowd_system_user }}
CROWD_HOME={{ crowd_install_location }}/crowd

start() {
        echo "Starting Crowd: "
        if [ "x$USER" != "x$RUN_AS_USER" ]; then
          su - $RUN_AS_USER -c "$CROWD_HOME/start_crowd.sh"
        else
          $CROWD_HOME/start_crowd.sh
        fi
        echo "done."
}
stop() {
        echo "Shutting down Crowd: "
        if [ "x$USER" != "x$RUN_AS_USER" ]; then
          su - $RUN_AS_USER -c "$CROWD_HOME/stop_crowd.sh"
        else
          $CROWD_HOME/stop_crowd.sh
        fi
        echo "done."
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        stop
        sleep 10
        echo "Hard killing any remaining threads.."
        kill -9 `cat $CROWD_HOME/apache-tomcat/work/catalina.pid`
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart}"
esac

exit 0
