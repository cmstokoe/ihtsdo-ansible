#!/bin/bash
s3_bukcet_name="{{ stats_json_s3_bucket_name }}"
filename="{{ release_stats_json_file_name }}"
report_dir="{{ release_stats_json_report_folder }}"

echo "Uploading release stats json to AWS S3";
echo $report_dir
cd $report_dir
echo "start tar diff report json file"
tar -czf $filename *.json
