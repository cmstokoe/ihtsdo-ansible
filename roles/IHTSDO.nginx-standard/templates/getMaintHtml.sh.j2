#!/bin/sh

# Args -
# start downloads the file to here
# finish removes the file from here

maintFile={{ nginx_maint_filename }}
maintURL={{ nginx_maint_page_url }}
maintDir={{ nginx_maint_location }}

echo "Action = $1 "
if [ $1 = "start" ];
then wget -O $maintDir/$maintFile $maintURL
fi

if [ $1 = "stop" ];
then rm -f $maintDir/$maintFile
fi
